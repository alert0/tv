<?xml version="1.0" encoding="utf-8"?>
<com.iptv.rocky.view.live.LiveTypeCommonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >
    
    <!-- android:background="@drawable/recbill_bg" -->
    
    <RelativeLayout
        android:id="@+id/live_common_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >
        
        <com.iptv.common.view.AsyncImageView
	        android:id="@+id/live_common_img"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:paddingLeft="8dp"
	        android:scaleType="centerInside" />
        
	    <com.iptv.rocky.view.TextViewDip
	        android:id="@+id/live_common_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/live_common_img"
	        android:layout_alignTop="@+id/live_common_img"
	        android:layout_marginLeft="10dp"
	        android:singleLine="true"
	        android:textColor="@color/white"
	        android:textSize="24sp" />
	    
	    <com.iptv.rocky.view.TextViewDip
            android:id="@+id/live_bill_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/live_common_txt"
            android:layout_alignLeft="@+id/live_common_txt"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
        
    </RelativeLayout>

</com.iptv.rocky.view.live.LiveTypeCommonView>
