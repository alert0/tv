<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="themeactivity">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="TvGallery">
        <item name="android:fadingEdge">none</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:spacing">-20dip</item>
        <item name="android:unselectedAlpha">0.85</item>
    </style>

    <!-- 详情页.简介 -->
    <style name="summeryMultiLineTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

	<!-- 选集 item -->
    <style name="selectItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- grid item font white-->
    <style name="sportGridItemFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">2.0dip</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textSize">18.0sp</item> -->
    </style>
    
    <!-- grid item font black-->
    <style name="sportGridItemFont2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:textColor">@color/black</item>
        <!-- <item name="android:textSize">18.0sp</item> -->
    </style>
    
    <!-- tab style -->
    <style name="tvTabStyle">
	    <item name="android:textColor">@drawable/tv_tab_font_selector</item>
        <item name="android:background">@drawable/tv_tab_bg_selector</item>
    </style>
		    
    <style name="tvRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/tv_ratingbar</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:max">10</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    <style name="tvProgressBar">
        <item name="android:indeterminateDrawable">@drawable/tv_progress_indeterminate</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>
    
    <style name="tvSmallProgressBar">
        <item name="android:indeterminateDrawable">@drawable/tv_progress_indeterminate</item>
    	<item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    
    <style name="Tv.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
    	<item name="android:windowBackground">@color/dialog_background</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowIsFloating">false</item>
    </style>

    <style name="Tv.PromptDialog" parent="Tv.Dialog">
        <item name="android:windowBackground">@drawable/prompt_dialog_content_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowFrame">@null</item>
    </style>
    
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_up_in</item>
        <item name="android:windowExitAnimation">@anim/popup_down_out</item>
    </style>
    
    <!-- 播放进度条 -->
    <style name="tv_player_progressBarStyleHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/tv_player_seek_selector</item>
        <item name="android:indeterminate">false</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:thumbOffset">6dip</item>
        <item name="android:thumb">@drawable/tv_player_seek_thumb_selector</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
    
    
    <style name="vod_select_package">
        <item name="android:button">@drawable/custom_radio_btn</item>
        
    </style>
    
</resources>