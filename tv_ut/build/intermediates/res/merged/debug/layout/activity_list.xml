<com.iptv.rocky.view.list.ListMasterLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tv_background" >
    
    <com.iptv.rocky.view.TitleView 
        android:id="@+id/list_titleview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true" />
    
    <com.iptv.rocky.view.list.ListHorizontalListView 
        android:id="@+id/list_listview"
        android:layout_width="match_parent" 
	  	android:layout_height="match_parent"
	  	android:listSelector="@color/transparent"
        android:divider="@null" />
    
    <include layout="@layout/tv_layout_tab" />
    
    <include layout="@layout/tv_layout_status" />
    
    <include layout="@layout/tv_progressbar" />

</com.iptv.rocky.view.list.ListMasterLayout>
