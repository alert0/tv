<?xml version="1.0" encoding="utf-8"?>
<com.iptv.rocky.view.vodmoviecolumn.VodMovieColumnMasterLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vod_movie_column_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/tv_background" >
    
    <com.iptv.rocky.view.vodmoviecolumn.VodMovieColumnGridView
        android:id="@+id/vod_movie_column_gridview" 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    app:cacheColorHint="#E8E8E8"
	    app:numColumns="auto_fit"
	    app:numRows="2"
	    app:stretchMode="spacingWidthUniform"
	    app:scrollDirectionLandscape="horizontal"
	    app:gravity="center" />
	    
    <com.iptv.rocky.view.TitleView 
        android:id="@+id/vod_movie_column_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />
	    
   	<include layout="@layout/tv_layout_status" />
    
   	<include layout="@layout/tv_progressbar"/>
   	
</com.iptv.rocky.view.vodmoviecolumn.VodMovieColumnMasterLayout>
