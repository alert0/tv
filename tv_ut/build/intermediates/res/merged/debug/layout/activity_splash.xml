<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/splash"
    android:background="@drawable/tv_background">

    
   <LinearLayout 
       android:layout_centerInParent="true" 
       android:orientation="vertical"
       android:layout_width="match_parent" 
       android:layout_height="match_parent"
       android:visibility="gone" 
       android:id="@+id/panel_config_account" 
       android:layout_marginLeft="200dip"
       android:layout_marginRight="200dip"
       android:layout_marginTop="100dip"
       android:layout_marginBottom="100dip"
       android:paddingLeft="20dip" 
       android:paddingRight="20dip" 
       android:paddingTop="20dip" 
       android:background="@drawable/dialog_background"
       android:paddingBottom="20dip"
       android:gravity="center_vertical">
       	<TextView android:text="IPTV帐号尚未配置，请配置账号信息" 
            android:layout_height="wrap_content"  
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/p_60" 
            android:paddingLeft="50dip" 
            android:paddingBottom="50dip"
            android:textColor="@color/white"
            android:layout_width="wrap_content"/>
   		<Button android:text="进入帐号配置页面" 
   		    android:textSize="@dimen/p_60"
   		    android:paddingLeft="20dip" 
       		android:paddingRight="20dip" 
   		    android:layout_gravity="center_horizontal"
   		    android:layout_height="wrap_content"
   		    android:layout_width="wrap_content"
   		    android:id="@+id/btn_config_account" 
   		    android:layout_centerVertical="true"/>
   </LinearLayout>
   
   <LinearLayout android:orientation="vertical"
       android:layout_width="match_parent" 
       android:layout_height="match_parent"
       android:layout_marginLeft="200dip"
       android:layout_marginRight="200dip"
       android:layout_marginTop="100dip"
       android:layout_marginBottom="100dip"
       android:paddingLeft="20dip" 
       android:paddingRight="20dip" 
       android:paddingTop="20dip" 
       android:background="@drawable/dialog_background"
       android:paddingBottom="20dip"
       android:visibility="gone" 
       android:id="@+id/panel_confirm_config_password"
       android:gravity="center_vertical">
   		
       <TextView android:text="请输入配置密码" 
           	android:textColor="@color/white"
           	android:textSize="@dimen/p_60" 
           	android:id="@+id/config_alert"
           	android:visibility="visible"
           	android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
           	android:layout_marginBottom="20dip"
           	android:layout_height="wrap_content"
           	android:layout_width="wrap_content"/>
   		<EditText android:id="@+id/input_config_password_editText" 
   		    android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
       		android:layout_marginBottom="20dip"
   		    android:layout_width="match_parent" 
   		    android:layout_height="wrap_content"/>
   		
   		<Button android:text="确定" 
   		    android:textSize="@dimen/p_60"
   		    android:layout_height="wrap_content"
   		    android:layout_width="wrap_content"
   		    android:id="@+id/btn_enter_config_account" 
   		    android:paddingLeft="20dip" 
       		android:paddingRight="20dip" 
       		android:layout_marginTop="20dip"
   		    android:layout_gravity="center_horizontal"
   		    android:layout_centerVertical="true"/>
  
   </LinearLayout>
   
   <LinearLayout android:orientation="vertical"
       android:layout_width="match_parent" 
       android:layout_height="match_parent"
       android:layout_marginLeft="200dip"
       android:layout_marginRight="200dip"
       android:layout_marginTop="100dip"
       android:layout_marginBottom="100dip"
       android:background="@drawable/dialog_background"
       android:visibility="gone" 
       android:id="@+id/panel_enter_username_password"
       android:gravity="center_vertical">
   		
       <TextView android:text="业务帐号：" 
          	android:textColor="@color/white"
          	android:textSize="@dimen/p_60"
          	android:id="@+id/text_iptv_user_name"
          	android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
           	android:layout_height="wrap_content"
           	android:layout_width="wrap_content"/>
       
   		<EditText android:id="@+id/edit_iptv_user_name" 
   		    android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
   		    android:layout_width="match_parent" 
   		    android:layout_height="wrap_content"/>
   		
   		<TextView android:text="业务密码：" 
   		    android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
   		    android:id="@+id/text_iptv_user_password"  
   		    android:layout_height="wrap_content"
           	android:layout_width="wrap_content"/>
   		<EditText android:id="@+id/edit_iptv_password"
   		    android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:layout_marginLeft="20dip"
       		android:layout_marginRight="20dip"
   			android:layout_width="match_parent" 
   			android:layout_height="wrap_content"/>
   		
   		<TextView android:text="" 
   		   android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:id="@+id/account_tips" 
   		    android:layout_height="wrap_content"
           	android:layout_width="wrap_content"
   		    android:layout_marginLeft="20dip"
   		    android:layout_marginBottom="20dip"
       		android:layout_marginRight="20dip"/>
   		
   		<Button android:text="确定" 
   		    android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:layout_height="wrap_content"
   		    android:layout_width="wrap_content"
   		    android:id="@+id/btn_confirm_name_password" 
   		    android:layout_gravity="center_horizontal" />
   		
   		
   </LinearLayout>
   
   <LinearLayout android:orientation="vertical"
       android:layout_width="match_parent" 
       android:layout_height="match_parent"
       android:layout_marginLeft="200dip"
       android:layout_marginRight="200dip"
       android:layout_marginTop="100dip"
       android:layout_marginBottom="100dip"
       android:background="@drawable/dialog_background"
       android:visibility="gone" 
       android:id="@+id/panel_error_info"
       android:gravity="center_vertical">
   		<TextView android:text="错误代码：30005" 
   		   android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:id="@+id/error_code" 
   		    android:layout_height="wrap_content"
           	android:layout_width="wrap_content"
   		    android:layout_marginLeft="20dip"
   		    android:layout_marginBottom="20dip" 
       		android:layout_marginRight="20dip"/>
   		<TextView android:text="错误信息：您的帐号不存在或用户帐号/密码错误" 
   		   android:textSize="@dimen/p_60" 
   		    android:textColor="@color/white"
   		    android:id="@+id/error_infomation" 
   		    android:layout_height="wrap_content"
           	android:layout_width="wrap_content"
   		    android:layout_marginLeft="20dip"
   		    android:layout_marginBottom="20dip"
       		android:layout_marginRight="20dip"/>
   		
   		<LinearLayout  
   		    android:gravity="center_horizontal"
   		    android:layout_width="match_parent" 
       		android:layout_height="wrap_content"
   		    android:layout_marginLeft="200dip"
       		android:layout_marginRight="200dip"
       		android:layout_marginTop="100dip"
       		android:layout_marginBottom="100dip">
   		    <Button android:text="重新配置"
	   		    android:textSize="@dimen/p_60" 
	   		    android:textColor="@color/white"
	   		    android:layout_height="wrap_content"
	   		    android:layout_width="wrap_content"
	   		    android:id="@+id/btn_return_to_config" 
	   		    android:layout_gravity="center_horizontal" />
	   		   		
	   		<Button android:text="退出"
	   		    android:textSize="@dimen/p_60" 
	   		    android:textColor="@color/white"
	   		    android:layout_height="wrap_content"
	   		    android:layout_width="wrap_content"
	   		    android:id="@+id/btn_exit_apk" 
	   		    android:layout_gravity="center_horizontal" />
   		</LinearLayout>
   		
   		
   </LinearLayout>      
</RelativeLayout>
