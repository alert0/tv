<?xml version="1.0" encoding="utf-8"?>
<com.iptv.rocky.view.home.HomeTopVerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
       	android:id="@+id/home_topver_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <com.iptv.common.view.AsyncImageView
	        android:id="@+id/home_topver_backimg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentBottom="true"
	        android:scaleType="centerCrop" />
        
        <ImageView
            android:id="@+id/home_hover_floatimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />
        
        <LinearLayout 
            android:id="@+id/home_topver_titlelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical" >
            
            <com.iptv.rocky.view.TextViewDip
                android:id="@+id/home_topver_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_horizontal|bottom"
                android:singleLine="true"
	            android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_master_textsize" />
            
            <View
                android:id="@+id/home_topver_cutline"
                android:layout_height="1dip"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@color/usercenter_cutline" />
            
            <com.iptv.rocky.view.TextViewDip
		        android:id="@+id/home_topver_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal|top"
		        android:gravity="center_horizontal|top"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:singleLine="true" />
        </LinearLayout>
        
    </RelativeLayout>
    
    <com.iptv.rocky.view.ScaleAsyncImageView
        android:id="@+id/home_topver_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tv:scaleWidth="@dimen/home_icon_scaleimagesize"
        tv:scaleHeight="@dimen/home_icon_scaleimagesize" />
    
</com.iptv.rocky.view.home.HomeTopVerView>
