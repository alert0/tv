<?xml version="1.0" encoding="utf-8"?>
<com.iptv.rocky.view.home.HomeTopView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
       	android:id="@+id/home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <com.iptv.common.view.AsyncImageView
	        android:id="@+id/home_top_backimg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentBottom="true"
	        android:scaleType="centerCrop" />
        
        <ImageView
            android:id="@+id/home_top_floatimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        
        <com.iptv.rocky.view.TextViewDip
	        android:id="@+id/home_top_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
        <!-- old android:textSize="@dimen/tv_master_textsize" -->
        
    </RelativeLayout>
    
    <com.iptv.rocky.view.ScaleAsyncImageView
        android:id="@+id/home_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tv:scaleWidth="@dimen/home_icon_scaleimagesize"
        tv:scaleHeight="@dimen/home_icon_scaleimagesize" />

</com.iptv.rocky.view.home.HomeTopView>
